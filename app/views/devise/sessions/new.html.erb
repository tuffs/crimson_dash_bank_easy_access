<div class="min-h-screen flex items-center justify-center bg-[#F5E6C8] font-sans">
  <div class="bg-white/70 rounded-lg shadow-md hover:shadow-2xl transition-shadow duration-300 p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold text-[#E4572E] mb-6 text-center font-['Roboto','Open Sans',Arial,sans-serif]" style="letter-spacing:-0.1rem;">Log In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-[#4A4E69] font-semibold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#E4572E]" %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class: "block text-[#4A4E69] font-semibold mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#E4572E]" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="mb-6 flex items-center">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-[#4A4E69] font-semibold" %>
    </div>
    <% end -%>

    <div class="flex justify-center">
      <%= f.submit "Log in", class: "bg-[#E4572E] hover:bg-[#d1461c] text-white font-bold py-2 px-6 rounded transition-colors duration-200" %>
    </div>
    <% end %>
    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>